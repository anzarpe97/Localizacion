<odoo>
    <data>
        <!-- Definir el botón para imprimir el reporte en la vista de formulario -->
        <record id="view_invoice_form_with_print_button" model="ir.ui.view">
            <field name="name">account.move.form.with.print.button</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <!-- Botón para Factura -->
                    <button name="action_print_invoice_custom_dual"
                            type="object"
                            string="Imprimir Factura"
                            class="btn-primary"
                            invisible="move_type != 'out_invoice' or debit_origin_id"/>

                    <!-- Botón para Nota de Crédito -->
                    <button name="action_print_invoice_custom_dual"
                            type="object"
                            string="Imprimir Nota de Crédito"
                            class="btn-primary"
                            invisible="move_type != 'out_refund'"/>

                    <!-- Botón para Nota de Débito -->
                    <button name="action_print_invoice_custom_dual"
                            type="object"
                            string="Imprimir Nota de Débito"
                            class="btn-primary"
                            invisible="move_type != 'out_invoice' or not debit_origin_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
