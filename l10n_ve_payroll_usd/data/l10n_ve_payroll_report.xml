<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Columnas del reporte FAOV -->
        <record id="l10n_ve_payroll_usd.payroll_report_faov_sal_integral" model="account.report.column">
            <field name="name">Salario Integral</field>
            <field name="expression_label">Salario Integral</field>
            <field name="sequence">10</field>
        </record>

        <record id="l10n_ve_payroll_usd.payroll_report_faov_ret_faov" model="account.report.column">
            <field name="name">Retención FAOV</field>
            <field name="expression_label">Retención FAOV</field>
            <field name="sequence">20</field>
        </record>

        <record id="l10n_ve_payroll_usd.payroll_report_faov_aporte_faov" model="account.report.column">
            <field name="name">Aporte FAOV</field>
            <field name="expression_label">Aporte FAOV</field>
            <field name="sequence">30</field>
        </record>

        <record id="l10n_ve_payroll_usd.payroll_report_faov_total" model="account.report.column">
            <field name="name">Total</field>
            <field name="expression_label">Total</field>
            <field name="sequence">40</field>
        </record>

        <!-- Definición del reporte FAOV -->
        <record id="l10n_ve_payroll_usd_report_faov" model="account.report">
            <field name="name">Aportes y Retenciones FAOV</field>
            <field name="filter_unfold_all" eval="True"/>
            <field name="filter_partner" eval="False"/>
            <field name="filter_show_draft" eval="False"/>
            <field name="filter_unreconciled" eval="False"/>
            <field name="filter_period_comparison" eval="False"/>
            <field name="filter_date_range" eval="True"/>
            <field name="filter_multi_company">selector</field>
            <field name="default_opening_date_filter">this_month</field>
            <field name="search_bar" eval="True"/>
            <field name="custom_handler_model_id" ref="l10n_ve_payroll_usd.model_l10n_ve_payroll_usd_report_handler_faov"/>
            <field name="column_ids" eval="[(6, 0, [
                ref('l10n_ve_payroll_usd.payroll_report_faov_sal_integral'),
                ref('l10n_ve_payroll_usd.payroll_report_faov_ret_faov'),
                ref('l10n_ve_payroll_usd.payroll_report_faov_aporte_faov'),
                ref('l10n_ve_payroll_usd.payroll_report_faov_total')
            ])]"/>
        </record>
    </data>
</odoo>
