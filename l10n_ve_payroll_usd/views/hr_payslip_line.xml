<odoo>
    <record id="view_hr_payslip_line_form_inherit" model="ir.ui.view">
        <field name="name">hr.payslip.line.form.inherit</field>
        <field name="model">hr.payslip.line</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_line_form"/>
        <field name="arch" type="xml">

            <!-- Sobrescribimos el campo amount en la vista de formulario -->
            <xpath expr="//field[@name='amount']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>

        </field>
    </record>

    <record id="view_hr_payslip_line_tree_inherit" model="ir.ui.view">
        <field name="name">hr.payslip.line.tree.inherit</field>
        <field name="model">hr.payslip.line</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_line_tree"/>
        <field name="arch" type="xml">

            <!-- Sobrescribimos el campo amount en la vista de lista -->
            <xpath expr="//field[@name='amount']" position="attributes">
                <attribute name="column_invisible">True</attribute>
            </xpath>

        </field>
    </record>
</odoo>
