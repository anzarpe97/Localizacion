<odoo>
    <data>
        <record id="custom_neutralize_banner" model="ir.ui.view">
            <field name="name">Neutralize Banner</field>
            <field name="model">ir.ui.view</field>
            <field name="inherit_id" ref="web.layout"/>
            <field name="arch" type="xml">
                <xpath expr="//span[@id='oe_neutralize_banner']" position="replace">
                    <span id="oe_neutralize_banner" t-attf-style="text-align: center; color: #FFFFFF; background-color: #D0442C; position: relative; display: block; font-size: 16px;">
                        <t t-out="neutralize_banner_text">¡El sistema está en mantenimiento! Por favor, espere...</t>
                    </span>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
