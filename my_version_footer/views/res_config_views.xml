<odoo>
    <data>
        <!-- Vista de configuración personalizada -->
        <record id="view_res_config_settings_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.footer</field>
            <field name="model">res.config.settings</field>
            <!-- Referencia al ID base de la vista -->
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <!-- Colocar el texto "VERSION: 17.0.1" justo antes de la sección <form> -->
                <xpath expr="//form" position="inside">
                    <div style="text-align: center; font-size: 28px; padding-bottom: 10px;">
                        <strong>VERSION: 17.0.1</strong>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
