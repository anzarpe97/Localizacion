<odoo>
    <record id="view_account_invoice_price_check_wizard" model="ir.ui.view">
        <field name="name">account.invoice.price.check.wizard.form</field>
        <field name="model">account.invoice.price.check.wizard</field>
        <field name="arch" type="xml">
            <form string="Validación de precio" class="o_form_nosheet">
                <sheet>
                    <div class="oe_title" style="margin-bottom: 15px;">
                        <h3><span>⚠️ Diferencia de precios detectada</span></h3>
                    </div>
                    <group width="100%">
                    </group>
                        <div style="white-space: pre-wrap; word-break: break-word; text-align: justify; padding: 10px;">
                            <field name="message" readonly="1" nolabel="1" widget="html"/>
                        </div>
                </sheet>
                <footer>
                    <button string="Aceptar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>