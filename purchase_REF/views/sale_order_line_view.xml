<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Agregamos los campos 'ref' y 'ref_unit' en las líneas de venta (sale.order.line)
        Estos campos se mostrarán en el formulario de sale.order en las líneas
    -->
    <record id="sale_order_line_form_inherit_ref" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.ref</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Agregamos ref_unit después de price_unit en el tree de order_line -->
            <xpath expr="//page[@name='order_lines']//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                <field name="ref_unit" string="REF Unit" optional="show"/>
            </xpath>
            <!-- Agregamos ref después de price_subtotal en el tree de order_line -->
            <xpath expr="//page[@name='order_lines']//field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                <field name="ref" string="REF Subtotal" readonly="1" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>