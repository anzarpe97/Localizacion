<odoo>
    <data noupdate="1">
        <record id="ir_cron_audit_cleanup" model="ir.cron">
            <field name="name">Auditoría: Limpieza logs antiguos (&gt; 90 días)</field>
            <field name="model_id" ref="model_audit_log"/>
            <field name="state">code</field>
            <field name="code">model.action_cleanup_old_logs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
        </record>

        <record id="rule_audit_users" model="audit.rule">
            <field name="model_id" ref="base.model_res_users"/>
            <field name="active" eval="True"/>
        </record>
        
        <record id="rule_audit_companies" model="audit.rule">
            <field name="model_id" ref="base.model_res_company"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>