<odoo>
    <data>
        <record id="module_category_audit_compliance" model="ir.module.category">
            <field name="name">Auditoría Fiscal (SENIAT)</field>
            <field name="description">Gestión de permisos para auditoría fiscal.</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_seniat_audit" model="res.groups">
            <field name="name">Auditor SENIAT (Solo Lectura)</field>
            <field name="category_id" ref="module_category_audit_compliance"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Usuario con acceso de solo lectura a los módulos fiscales y registros de auditoría.</field>
        </record>

        <record id="rule_audit_log_seniat_visibility" model="ir.rule">
            <field name="name">Auditoría: Ver todos los logs (SENIAT)</field>
            <field name="model_id" ref="model_audit_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_seniat_audit'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>